{
  "name": "soundable",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch ./src/index.ts",
    "start": "bun run ./src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile soundable ./src/index.ts",
    "db:migration-gen": "drizzle-kit generate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "^1.3.1",
    "@elysiajs/swagger": "^1.3.0",
    "drizzle-orm": "^0.44.2",
    "elysia": "^1.4.9"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.8.3"
  }
}
